	public void light(int light) {
		if (light == 1) {
			lightRingInner.set(Relay.Value.kReverse);
			lightRingMiddle.set(Relay.Value.kForward);
			lightRingOuter.set(Relay.Value.kForward);
		} else if (light == 2) {
